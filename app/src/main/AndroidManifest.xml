<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adam.manoauto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/my_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="portrait"
        android:roundIcon="@mipmap/my_icon_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarTheme">
        <activity android:name=".Login.Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".Register.Register"
            android:screenOrientation="portrait"/>
        <activity android:name=".Search.SearchActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Search.BrandlistActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Search.ModellistActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Search.YearsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Search.PriceActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CreateAdvertisement.AddCarActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity android:name=".Search.FuelTypeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Search.CarTypeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Advert.AdvertDetailedView"
            android:screenOrientation="portrait"/>
        <activity android:name=".Search.SearchedCarsActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>