<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolBarSearch"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:background="@color/toolbarBackground"
                app:popupTheme="@style/ThemeOverlay.AppCompat">
            <TextView
                android:id="@+id/search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/locationBtn"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="Add car"
                android:textColor="@color/headerBackgroundColor"
                android:textSize="18dp" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@id/appBar"
            app:srcCompat="@drawable/mercedes" />

        <HorizontalScrollView
            android:id="@+id/imageScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageButton2"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:srcCompat="@drawable/arrowsimple" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintStart_toEndOf="@id/imageButton3"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:srcCompat="@drawable/arrowsimple" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintStart_toEndOf="@id/imageButton4"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:srcCompat="@drawable/arrowsimple" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintStart_toEndOf="@id/imageButton5"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:srcCompat="@drawable/arrowsimple" />
                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintStart_toEndOf="@id/imageButton6"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:srcCompat="@drawable/arrowsimple" />
                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintStart_toEndOf="@id/imageButton7"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:srcCompat="@drawable/arrowsimple" />

            </LinearLayout>
        </HorizontalScrollView>

        <!--New vehicle details -->


        <!--Set year for new vehicle-->

        <TextView
            android:id="@+id/viewNewPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/superLightGray"
            android:padding="8dp"
            android:text="Price:"
            android:textColor="@color/userColor"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/imageScrollView"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/txtNewPrice"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/superLightGray"
            android:hint="â‚¬1000"
            android:inputType="number"
            android:maxLength="7"
            android:padding="8dp"
            android:textColorHint="@color/colorGrey"
            android:textColor="@color/colorBlue"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/imageScrollView" />

        <!--<include-->
        <!--android:id="@+id/details"-->
        <!--layout="@layout/activity_add_car_detail_input"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--app:layout_constraintTop_toBottomOf="@id/txtNewPrice" />-->


        <RelativeLayout
            android:id="@+id/newYears"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/headerBackgroundColor"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/NewKm2"
            app:layout_constraintEnd_toStartOf="@+id/NewKm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNewPrice">


            <EditText
                android:id="@+id/txtNewYears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@id/imgNewYearsrs"
                android:layout_weight="1"
                android:text="Years:"
                android:textColor="@color/colorGrey"
                android:textSize="15sp" />


            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

            <ImageView
                android:id="@+id/imgNewYearsrs"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/starfavourites" />

        </RelativeLayout>

        <!--KM LAYOUT-->


        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <RelativeLayout
            android:id="@+id/NewKm"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/headerBackgroundColor"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/txtNewPrice">

            <EditText
                android:id="@+id/txtNewKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@id/imgNewKm"
                android:layout_weight="1"
                android:text="km:"
                android:textColor="@color/colorGrey"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/imgNewKm"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/starfavourites" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/NewKm2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_below="@+id/newYears"
            android:background="@color/headerBackgroundColor"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/NewKm">

            <EditText
                android:id="@+id/txtNewKm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@id/imgNewKm2"
                android:layout_weight="1"
                android:text="km:"
                android:textColor="@color/userColor"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/imgNewKm2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/starfavourites" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/newYears3"
            android:layout_width="0dp"
            android:layout_height="60dp"

            android:background="@color/headerBackgroundColor"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/NewKm2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newYears">


            <EditText
                android:id="@+id/txtNewYears3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@id/imgNewYearsrs3"
                android:layout_weight="1"
                android:text="Years:"
                android:textColor="@color/userColor"
                android:textSize="15sp" />


            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BDBDBD" />

            <ImageView
                android:id="@+id/imgNewYearsrs3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/starfavourites" />

        </RelativeLayout>


    </android.support.constraint.ConstraintLayout>

</ScrollView>