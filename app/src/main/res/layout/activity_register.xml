<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.adam.manoauto.Register.Register"
android:background="@drawable/backgroundloginsmall"
android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="245dp"
        android:layout_height="84dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/img_email"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/buttonemail"
        android:layout_marginTop="45dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="35dp"
        />

    <EditText
        android:id="@+id/text_name"
        android:ems="10"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:hint="E - mail"
        android:backgroundTint="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/background_light"
        />

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/img_password"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/passwordbanlogin"
        android:layout_marginTop="25dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="25dp"
        />

    <EditText
        android:id="@+id/text_password"
        android:ems="10"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:hint="Password"
        android:backgroundTint="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/background_light"
        />

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/img_password_repeat"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/passwordbanlogin"
        android:layout_marginTop="25dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="25dp"
        />

    <EditText
        android:id="@+id/text_password_repeat"
        android:ems="10"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:hint="Repeat password"
        android:backgroundTint="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/background_light"
        />

</LinearLayout>





<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="35dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_register"
            android:text="Register"
            android:background="@drawable/buttonregister"
            android:layout_width="275dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@android:color/background_light"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp" />

    </RelativeLayout>

</LinearLayout>

</LinearLayout>

